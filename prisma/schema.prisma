datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id            Int           @id @default(autoincrement())
  title         String
  author        String
  genre         String
  format        String        // PHYSICAL, EBOOK, AUDIOBOOK
  status        String        // READ, TBR, DNF
  pages         Int?
  percentRead   Float?        // used for DNF tracking
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  remindLinksFrom RemindLink[] @relation("FromBook")
  remindLinksTo   RemindLink[] @relation("ToBook")
}

model RemindLink {
  id        Int   @id @default(autoincrement())
  fromId    Int
  toId      Int
  from      Book  @relation("FromBook", fields: [fromId], references: [id])
  to        Book  @relation("ToBook", fields: [toId], references: [id])
  createdAt DateTime @default(now())
}

